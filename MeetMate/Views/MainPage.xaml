<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeetMate.Views.MainPage">
    <StackLayout Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
        <Image
            Source="title.png"
            HorizontalOptions="Center"
            IsVisible="true"
            WidthRequest="400"
            HeightRequest="400"
        />
        <Label FontAttributes="Bold" Text="Добро пожаловать в MeetMate!" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="0,10,0,0"/>
        <Entry x:Name="UsernameEntry" Placeholder="Ник" Margin="0,10,0,0"/>
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" Margin="0,10,0,0"/>
        <Button Text="Войти" Command="{Binding LoginCommand}" Margin="0,10,0,0"/>
        <Button Text="Зарегистрироваться" Command="{Binding NavigateToRegisterCommand}" Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>